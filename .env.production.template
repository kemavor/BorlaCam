# BorlaCam Production Environment Configuration
# Copy this file to .env.production and customize for your deployment

# API Configuration
FLASK_ENV=production
PORT=8000
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000,https://yourdomain.com

# Model Configuration
CONFIDENCE_THRESHOLD=0.25
MAX_DETECTIONS=5

# Performance Settings
GPU_ENABLED=true
HALF_PRECISION=true

# Security (set your own secure values)
SECRET_KEY=your-secret-key-here

# Optional: Database configuration
# DATABASE_URL=sqlite:///borlacam.db

# Optional: External monitoring
# MONITORING_WEBHOOK=https://your-monitoring-service.com/webhook